<?xml version="1.0"?>

<!DOCTYPE scatterer>

<!-- weights: absorption, scattering, transmission -->
<homogeneous_scatterer 
  mcweights="0, 1, 0.1"
  max_multiplescattering_loops="3"
  >
  
  <KernelContainer average="yes">


    <!-- DGS resolution kernel
      target-position: target position. example: 2.87121987*meter,0.*meter,8.69538059e-01*meter
      target-radius: rough estimate of target radius
      tof-at-target: TOF at target
      dtof: TOF width thru target
     -->
    <DGSSXResKernel
        target-position="1.16148816725*meter,-0.793242506236*meter,2.76603420755*meter"
        target-radius="0.0146158829622*meter"
        tof-at-target="2504.52576398*microsecond"
        dtof="5.05545166353*microsecond"
        />

    
  </KernelContainer>
  
</homogeneous_scatterer>
